# App name: used on site titles and as text for links
APP_NAME=OpenDataBio
# App environment. Use "local" for development or "production" for production
APP_ENV=local
# App key. Will be generated by php artisan key:generate
APP_KEY=
# Debug mode. Set to "true" for development mode
APP_DEBUG=true
APP_LOG_LEVEL=debug
# Set this to the base url of the app
APP_URL=http://localhost/opendatabio/

### Database settings
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=opendatabio
DB_USERNAME=opendatabio
DB_PASSWORD=somestrongpassword
### These have defaults in config/database.php
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

### Proxy setting for outward traffic (accessing IH, IPNI, etc)
PROXY_USER=
PROXY_PASSWORD=
PROXY_URL=
PROXY_PORT=1080

### Google Maps API Key
GMAPS_API_KEY=null
### MOBOT (tropicos.org) API Key
MOBOT_API_KEY=null

# Mail options!
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=opendatabio@example.com
MAIL_FROM_NAME=OpenDataBio

# Media options
MEDIA_MAX_FILE_SIZE=209715200
